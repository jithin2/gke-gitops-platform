{
  "annotations": {
    "list": [
      {
        "datasource": "-- Grafana --",
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "description": "GitOps Platform - Cluster Overview Dashboard",
  "editable": true,
  "gnetId": null,
  "graphTooltip": 1,
  "id": null,
  "links": [],
  "panels": [
    {
      "title": "Cluster CPU Usage",
      "type": "gauge",
      "gridPos": { "h": 6, "w": 6, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "sum(rate(container_cpu_usage_seconds_total{namespace=~\"dev|staging|production\"}[5m])) / sum(kube_node_status_allocatable{resource=\"cpu\"}) * 100",
          "legendFormat": "CPU %"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 60 },
              { "color": "red", "value": 85 }
            ]
          },
          "unit": "percent",
          "max": 100
        }
      }
    },
    {
      "title": "Cluster Memory Usage",
      "type": "gauge",
      "gridPos": { "h": 6, "w": 6, "x": 6, "y": 0 },
      "targets": [
        {
          "expr": "sum(container_memory_working_set_bytes{namespace=~\"dev|staging|production\"}) / sum(kube_node_status_allocatable{resource=\"memory\"}) * 100",
          "legendFormat": "Memory %"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 70 },
              { "color": "red", "value": 90 }
            ]
          },
          "unit": "percent",
          "max": 100
        }
      }
    },
    {
      "title": "Pod Count by Namespace",
      "type": "stat",
      "gridPos": { "h": 6, "w": 6, "x": 12, "y": 0 },
      "targets": [
        {
          "expr": "sum(kube_pod_info{namespace=~\"dev|staging|production\"}) by (namespace)",
          "legendFormat": "{{ namespace }}"
        }
      ]
    },
    {
      "title": "Pod Restart Rate (15m)",
      "type": "stat",
      "gridPos": { "h": 6, "w": 6, "x": 18, "y": 0 },
      "targets": [
        {
          "expr": "sum(increase(kube_pod_container_status_restarts_total{namespace=~\"dev|staging|production\"}[15m])) by (namespace)",
          "legendFormat": "{{ namespace }}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "red", "value": 1 }
            ]
          }
        }
      }
    },
    {
      "title": "Request Rate by Service",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 6 },
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{namespace=~\"dev|staging|production\"}[5m])) by (service)",
          "legendFormat": "{{ service }}"
        }
      ]
    },
    {
      "title": "Error Rate by Service",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 6 },
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{status=~\"5..\", namespace=~\"dev|staging|production\"}[5m])) by (service)",
          "legendFormat": "{{ service }} 5xx"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 20
          },
          "color": { "mode": "fixed", "fixedColor": "red" }
        }
      }
    },
    {
      "title": "P99 Latency by Service",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 14 },
      "targets": [
        {
          "expr": "histogram_quantile(0.99, sum(rate(http_request_duration_seconds_bucket{namespace=~\"dev|staging|production\"}[5m])) by (le, service))",
          "legendFormat": "{{ service }} P99"
        },
        {
          "expr": "histogram_quantile(0.50, sum(rate(http_request_duration_seconds_bucket{namespace=~\"dev|staging|production\"}[5m])) by (le, service))",
          "legendFormat": "{{ service }} P50"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s"
        }
      }
    }
  ],
  "schemaVersion": 38,
  "style": "dark",
  "tags": ["kubernetes", "gitops", "platform"],
  "templating": {
    "list": [
      {
        "name": "namespace",
        "type": "query",
        "query": "label_values(kube_pod_info, namespace)",
        "multi": true,
        "includeAll": true,
        "current": { "text": "All", "value": "$__all" }
      }
    ]
  },
  "time": { "from": "now-6h", "to": "now" },
  "title": "GitOps Platform - Cluster Overview",
  "uid": "gitops-cluster-overview",
  "version": 1
}
